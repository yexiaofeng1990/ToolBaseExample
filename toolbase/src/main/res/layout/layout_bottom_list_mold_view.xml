<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/main_medium_A"
        android:textSize="14sp" />

    <include
        android:id="@+id/ll_line"
        layout="@layout/layout_gray_line" />

    <cn.com.toolbase.view.MaxListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/main_medium_D"
        android:dividerHeight="0.8dp"
        android:listSelector="@drawable/item_press_bg" />

    <ImageButton
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:src="@drawable/btn_close_buttom"
        android:visibility="gone" />
</LinearLayout>